import random
inicio = input('Você está pronto para jogar? (S/N) ')
inicio = inicio.upper()
x = 10
amarelo = 10
verde = 10
azul = 10
roxo = 10
vermelho = 10
laranja = 10
dica = []
if inicio == 'S':
    cores = ['amarelo', 'verde', 'azul', 'roxo', 'vermelho', 'laranja']
    tentativas = []
    for i in range(len(tentativas)):
        tentativas[i] = tentativas[i].lower()
    cores_aleatorias = random.sample(cores, 4)

    while x > 0:
        for tentativa in range (4):
            tentativa_cor = (input('Digite uma cor entre amarelo, verde, azul, roxo, vermelho e laranja: '))
            tentativa_cor = tentativa_cor.lower()
            tentativas.append(tentativa_cor)

        if tentativas == cores_aleatorias:
            print('Parabéns! Você acertou!', tentativas)
            break

        elif tentativas != cores_aleatorias:
            if tentativas[0] in cores_aleatorias:
                if cores_aleatorias[0] == tentativas[0]:
                    dica.append('branco')
                else:
                    dica.append('preto')
            else:
                dica.append('vazio')

            if tentativas[1] in cores_aleatorias:
                if cores_aleatorias[1] == tentativas[1]:
                    dica.append('branco')
                else:
                    dica.append('preto')
            else:
                dica.append('vazio')

            if tentativas[2] in cores_aleatorias:
                if cores_aleatorias[2] == tentativas[2]:
                    dica.append('branco')
                else:
                    dica.append('preto')
            else:
                dica.append('vazio')

            if tentativas[3] in cores_aleatorias:
                if cores_aleatorias[3] == tentativas[3]:
                    dica.append('branco')
                else:
                    dica.append('preto')
            else:
                dica.append('vazio')

            print(dica)
            dica.clear()

            print('Você gastou uma tentativa. Restam {} tentativas'.format(x - 1))
            x -= 1

            if 'amarelo' in tentativas:
                a = tentativas.count('amarelo')
                amarelo -= a
                print('Você tem {} pinos amarelos disponíveis'.format(amarelo))
            if not 'amarelo' in tentativas:
                print('Você tem {} pinos amarelos disponíveis'.format(amarelo))

            if 'verde' in tentativas:
                v = tentativas.count('verde')
                verde -= v
                print('Você tem {} pinos verdes disponíveis'.format(verde))
            if not 'verde' in tentativas:
                print('Você tem {} pinos verdes disponíveis'.format(verde))

            if 'azul' in tentativas:
                az = tentativas.count('azul')
                azul -= az
                print('Você tem {} pinos azuis disponíveis'.format(azul))
            if not 'azul' in tentativas:
                print('Você tem {} pinos azuis disponíveis'.format(azul))

            if 'roxo' in tentativas:
                r = tentativas.count('roxo')
                roxo -= r
                print('Você tem {} pinos roxos disponíveis'.format(roxo))
            if not 'roxo' in tentativas:
                print('Você tem {} pinos roxos disponíveis'.format(roxo))

            if 'vermelho' in tentativas:
                verm = tentativas.count('vermelho')
                vermelho -= verm
                print('Você tem {} pinos vermelhos disponíveis'.format(vermelho))
            if not 'vermelho' in tentativas:
                print('Você tem {} pinos vermelhos disponíveis'.format(vermelho))

            if 'laranja' in tentativas:
                l = tentativas.count('laranja')
                laranja -= l
                print('Você tem {} pinos laranjas disponíveis'.format(laranja))
            if not 'laranja' in tentativas:
                print('Você tem {} pinos laranjas disponíveis'.format(laranja))

            tentativas.clear()

            if amarelo < 1:
                print ('Você ficou sem pinos de uma cor! Você perdeu.\nA resposta era {}'.format(cores_aleatorias))
                break
            elif verde < 1:
                print ( 'Você ficou sem pinos de uma cor! Você perdeu.\nA resposta era {}'.format(cores_aleatorias))
                break
            elif azul < 1:
                print ( 'Você ficou sem pinos de uma cor! Você perdeu.\nA resposta era {}'.format(cores_aleatorias))
                break
            elif roxo < 1:
                print ( 'Você ficou sem pinos de uma cor! Você perdeu.\nA resposta era {}'.format(cores_aleatorias))
                break
            elif vermelho < 1:
                print ( 'Você ficou sem pinos de uma cor! Você perdeu.\nA resposta era {}'.format(cores_aleatorias))
                break
            elif laranja < 1 :
                print ( 'Você ficou sem pinos de uma cor! Você perdeu.\nA resposta era {}'.format(cores_aleatorias))
                break





    if x == 0:
        print('Suas tentativas acabaram. Você perdeu!\nA resposta era {}',format(cores_aleatorias))


else:
    print('Que pena! Eu queria muito jogar com você.')
